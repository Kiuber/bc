<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/little_space"
            android:layout_marginTop="@dimen/little_space"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/normal_space"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/normal_space">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/acet_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:drawablePadding="@dimen/normal_space"
                android:hint="请输入手机号"
                android:lines="1" />

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_space"
                android:background="@drawable/default_circle_bg"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="发送验证码"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/acet_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:drawablePadding="@dimen/normal_space"
                android:hint="请输入验证码"
                android:lines="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_ver_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_space"
                android:background="@drawable/default_circle_bg"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="验证"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/acet_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:drawablePadding="@dimen/normal_space"
                android:hint="请输入密码"
                android:lines="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_save_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_space"
                android:background="@drawable/default_circle_bg"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:text="注册"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="注册即视为同意用户服务协议"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>